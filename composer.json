{
    "name": "perfect-oblivion/valid",
    "description": "Custom Form Requests and Service Validation for Laravel",
    "version": "0.1.0",
    "keywords": [
        "perfectoblivion",
        "FormRequests",
        "Request",
        "Validation",
        "Rules"
    ],
    "homepage": "https://github.com/perfect-oblivion/valid",
    "license": "MIT",
    "authors": [
        {
            "name": "Clayton Stone",
            "email": "clay@perfectoblivion.com",
            "homepage": "https://perfectoblivion.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "laravel/framework": "5.7.* || 5.8.*",
        "waavi/sanitizer": "^1.0.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "mockery/mockery": "0.9.*",
        "orchestra/testbench": "~3.7"
    },
    "autoload": {
        "psr-4": {
            "PerfectOblivion\\Valid\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PerfectOblivion\\Valid\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "PerfectOblivion\\Valid\\ValidServiceProvider"
            ]
        }
    }
}
